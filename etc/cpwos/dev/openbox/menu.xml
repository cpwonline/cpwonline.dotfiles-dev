<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="http://openbox.org/3.4/menu">
	<menu id="root-menu" label="Openbox 3">
		<separator label="CPW OS Dev"/>
		<menu id="applications-new"/>
		<item label="View applications">
			<action name="Execute">
				<command>rofi -show drun -theme /etc/cpwos/dev/rofi/launcher/config-drun.rasi</command>
			</action>
		</item>
		<separator/>
		<menu id="system" label="System">
			<item label="Reconfigure Openbox">
				<action name="Reconfigure" />
			</item>
			<item label="Edit Openbox Menu">
				<action name="Execute"><command>xdg-open ~/.config/openbox/menu.xml</command></action>
			</item>
			<item label="Edit Openbox RC">
				<action name="Execute"><command>xdg-open ~/.config/openbox/rc.xml</command></action>
			</item>
			<item label="Edit Openbox Autostart">
				<action name="Execute"><command>xdg-open ~/.config/openbox/autostart</command></action>
			</item>
		</menu>
		<separator/>
		<menu id="session" label="Session">
			<item label="Exit">
				<action name="Exit">
					<prompt>yes</prompt>
				</action>
			</item>
			<item label="Log Out">
				<action name="SessionLogout">
					<prompt>yes</prompt>
				</action>
			</item>
			<item label="Restart">
				<action name="Execute">
					<prompt>Do you want to restart?</prompt>
					<command>systemctl reboot -i</command>
				</action>
			</item>
			<item label="Shut down">
				<action name="Execute">
					<prompt>Do you want to shut down?</prompt>
					<command>systemctl poweroff -i</command>
				</action>
			</item>
		</menu>
	</menu>
</openbox_menu>
