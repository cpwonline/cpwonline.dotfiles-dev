
configuration {
	font: "Source Code Pro 10";
	show-icons: true;
	icon-theme: "Tela-dark";
	disable-history: false;
	sidebar-mode: false;
	hover-select: true;
	me-select-entry: "";
	me-accept-entry: [ MousePrimary, MouseSecondary, MouseDPrimary ];
}

* {
	void: #00000000;
	background: #242424dd;
	hover: #545454ff;
	pressed: #6f6f6fff;
	foreground: #FFFFFFff;
	special: #295683ff;
}

window {
	transparency: "real";
	background-color: @background;
	text-color: @foreground;
	border: 0px;
	border-color: @special;
	border-radius: 0px;
	width: 200px;
	location: northeast;
	x-offset: -10px;
	y-offset: 40px;
}

prompt {
	enabled: true;
	padding: 10px;
	background-color: @background;
	text-color: @foreground;
	border: 2px;
	border-color: @special;
}

textbox-prompt-colon {
	expand: false;
	str: " Volume ";
	background-color: @special;
	text-color: @foreground;
	padding: 12px 10px 0px 10px;
}

inputbar {
	children: [ textbox-prompt-colon, prompt ];
	background-color: @void;
	text-color: @foreground;
	expand: false;
	border: 0% 0% 0% 0%;
	border-radius: 0;
	border-color: @void;
	padding: 0% 0% 0% 0%;
}

listview {
	background-color: @void;
	padding: 0px;
	columns: 1;
	lines: 3;
	spacing: 1%;
	cycle: true;
	dynamic: true;
	layout: vertical;
}

mainbox {
	background-color: @void;
	border: 0% 0% 0% 0%;
	border-radius: 0% 0% 0% 0%;
	border-color: @special;
	children: [ inputbar, listview ];
	spacing: 2%;
	padding: 10px;
}

element {
	background-color: @void;
	text-color: @foreground;
	orientation: vertical;
	border-radius: 0%;
	padding: 1% 0.5% 1% 0.75%;
}

element-icon {
	size: 24px;
	border: 0px;
}

element-text {
	expand: true;
	horizontal-align: 0;
	vertical-align: 0.5;
	margin: 1% 0.25% 0% 0.25%;
}

element selected {
	background-color: @hover;
	text-color: @foreground;
	border: 0% 0% 0% 0.5%;
	border-radius: 7px;
	border-color: @void;
}
