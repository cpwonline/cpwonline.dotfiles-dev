
configuration {
	font: "Source Code Pro 10";
	show-icons: true;
	icon-theme: "Tela-dark";
	disable-history: false;
	sidebar-mode: false;
	hover-select: true;
	me-select-entry: "";
	me-accept-entry: [ MousePrimary, MouseSecondary, MouseDPrimary ];
}

* {
	void: #00000000;
	background: #242424dd;
	hover: #545454ff;
	pressed: #6f6f6fff;
	foreground: #FFFFFFff;
	special: #295683ff;
}

window {
	transparency: "real";
	background-color: @background;
	text-color: @foreground;
	border: 0px;
	border-color: @special;
	border-radius: 0px;
	width: 100%;
	height: 100%;
	location: center;
	x-offset: 0;
	y-offset: 0;
}

prompt {
	enabled: true;
	padding: 1% 1% 1% 0%;
	background-color: @void;
	text-color: @foreground;
}

textbox-prompt-colon {
	expand: false;
	str: "CPW OS Dev |";
	background-color: @void;
	text-color: @foreground;
	padding: 1% 0.5% 1% 0.5%;
}

entry {
	background-color: @void;
	text-color: @foreground;
	placeholder-color: @foreground;
	expand: false;
	horizontal-align: 0;
	placeholder: "Search";
	padding: 1.15% 0.5% 1% 0.5%;
	blink: true;
}

inputbar {
	children: [ textbox-prompt-colon, prompt ];
	background-color: @hover;
	text-color: @foreground;
	expand: false;
	border: 0% 0% 3px 0%;
	border-radius: 0px;
	border-color: @special;
	position: center;
	margin: 0% 55% 0% 0%;
}

listview {
	background-color: @void;
	padding: 0px;
	columns: 5;
	lines: 5;
	spacing: 4%;
	cycle: true;
	dynamic: true;
	layout: horizontal;
	vertical-align: 0.5;
}

mainbox {
	background-color: @void;
	border: 0% 0% 0% 0%;
	border-radius: 0% 0% 0% 0%;
	border-color: @special;
	children: [ inputbar, listview ];
	spacing: 2%;
	padding: 30% 1% 2% 10%;
}

element {
	background-color: @void;
	text-color: @void;
	orientation: vertical;
	border-radius: 0%;
	padding: 1% 0.5% 1% 0.75%;
}

element-icon {
	size: 100px;
	border: 0px;
}

element-text {
	enabled: false;
	expand: true;
	horizontal-align: 0.5;
	vertical-align: 0.5;
	margin: 1% 0.25% 0% 0.25%;
}

element selected {
	background-color: @hover;
	text-color: @foreground;
	border: 0% 0% 0% 0.5%;
	border-radius: 7px;
	border-color: @void;
}
